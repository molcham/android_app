<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE5A0"
    tools:context=".MainActivity2">

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:srcCompat="@drawable/potatoescute" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton_poem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/poem_real"
        android:layout_gravity="center"
        android:background="@android:color/transparent"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ImageButton
        android:id="@+id/imageButton_seong"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/seong_real" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ImageButton
        android:id="@+id/imageButton_song"
        android:layout_width="390dp"
        android:layout_height="105dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@drawable/song_real" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="59dp" />

</LinearLayout>